<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!--
        Include Action Bar  -->
    	<include layout="@layout/actionbar_layout"/>
    
<ScrollView
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
    <LinearLayout
          android:orientation="vertical"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:padding="20dip"
         >

        <!-- Include Fragmented dashboard -->
        <!-- Email Label -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Minimum Value:"
            android:textColor="#372c24"
            android:textSize="16sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="5dip"
            android:singleLine="true"
            android:id="@+id/minimumvalue"
            android:textSize="25sp"
            android:inputType="numberDecimal"  />
        

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Value Per Cubic:"
            android:textColor="#372c24" 
            android:textSize="16sp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:singleLine="true"
            android:id="@+id/valuepercubic"
            android:textSize="25sp"
            android:inputType="numberDecimal"  />
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Additional Amount:"
            android:textColor="#372c24" 
            android:textSize="16sp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:singleLine="true"
            android:id="@+id/additionalamount"
            android:textSize="25sp"
            android:inputType="numberDecimal"/>"
         
        <!-- Spinner Element -->
         

        <Button
            android:id="@+id/btnformulasetting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Save Formula"
            android:onClick="saveformula" />
        <!-- Link to Registration Screen -->

        
       
    </LinearLayout>

	</ScrollView>
</LinearLayout>