<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingBottom="0dp"
	    android:id="@+id/settingrow">

        <ScrollView
             android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true"
             >
	    
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="436dp"
	            android:orientation="vertical"
	            android:padding="10dip" >

			      <TextView
			          android:id="@+id/dialogtext"
			          android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:layout_marginBottom="5sp"
			          android:text="Dedication and Acknowledgement"
			          android:textSize="17sp"
			          android:gravity="center"
			          android:textStyle="bold" />

			      <ImageView
			          android:id="@+id/sicon"
			          android:layout_width="70dp"
			          android:layout_height="wrap_content"
			          android:layout_gravity="center"
			          android:layout_weight="2.28"
			          android:adjustViewBounds="true"
			          android:padding="0dp"
			          android:scaleType="centerCrop"
			          android:src="@drawable/mama" />
			      <TextView
			          android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:layout_marginBottom="5sp"
			          android:text="Aurelia T. Tereso"
			          android:textSize="13sp"
			          android:gravity="center"
			          android:textStyle="bold" />

			      <TextView
			          android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:layout_weight="0.57"
			          android:ellipsize="end"
			          android:maxLines="6"
			          android:padding="10dp"
			          android:gravity="center"
			          android:text="This application is dedicated to my beloved mother who passed away last October 15, 2014. Ma we love you so much and we will miss you."
			          android:textColor="#a8a8a6"
			          android:textSize="14sp" />

			      <TextView
			          android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:layout_weight="2.89"
			          android:ellipsize="end"
			          android:gravity="center"
			          android:maxLines="11"
			          android:padding="9dp"
			          android:text="My special thanks and gratitude to the following site that shared their undeniable expertise in programming: 
			          				\n 1. CodeOfNinja.com\n 2. AndroidHive.info\n 3. sunil-android.blogspot.com\n 4. stockoverflow.com\n 5. other not mention"
			          	    
			          android:textColor="#a8a8a6"
			          android:textSize="14sp" />

			</LinearLayout>
			</ScrollView>
	</LinearLayout>
